{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "dist/**/*",
    "src/*.d.ts"
  ]
}